{
	"manifest_version": 2,

    "name": "Mappify MLH",
    "browser_action": {
        "default_icon": "images/logo.png",
        "default_title": "Mappify MLH",
        "default_popup": "./src/popup_failure.html"
    },
    "description": "A map for the Major League Hackathons",
    "icons": {
        "128": "./images/logo.png",
        "16": "./images/logo_16.png",
        "48": "./images/logo_48.png"
    },
    "permissions": [ "notifications", "activeTab", "tabs", "storage"],
    "version": "1.0",
    "web_accessible_resources": [ "images/*" ],
    "background": {
        "scripts": ["./scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [{
         "js": ["./scripts/jquery.min.js"],
         "matches": ["*://mlh.io/seasons/na*/events*"]
       }]
}
